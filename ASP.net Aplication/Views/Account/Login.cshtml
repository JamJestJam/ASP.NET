@model ASP.net_Aplication.Models.Identity.ModelLogin

@{
    ViewData["Title"] = "Login";
}

<h1>Zaloguj się</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Login">
            <div id="Danger" asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Login" class="control-label"></label>
                <input asp-for="Login" class="form-control" />
                <span asp-validation-for="Login" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <input asp-for="ReturnUrl" class="form-control" />
            <div class="form-group">
                <input type="submit" value="Zaloguj się" class="btn btn-primary" />
                <a class="btn btn-primary" id="Register" asp-controller="Account" asp-action="Register" asp-route-returnUrl="@Model.ReturnUrl">Zarejestruj się</a>
            </div>
        </form>
    </div>
</div>

<div>
    <a href="@Model.ReturnUrl">Wróć</a>
</div>

