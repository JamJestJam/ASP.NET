@model ASP.net_Aplication.Models.ModelAccount

@{
    ViewData["Title"] = "Rejestracja";
}

<h1>Zarejestruj się</h1>

<hr />
<form asp-action="Register">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <div class="col-6">
            <div class="form-group">
                <label asp-for="FirstName" class="control-label">Imie</label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>&nbsp;
            </div>
            <div class="form-group">
                <label asp-for="UserName" class="control-label">Login</label>
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>&nbsp;
            </div>
            <div class="form-group">
                <label asp-for="PasswordText" class="control-label">Hasło</label>
                <input asp-for="PasswordText" class="form-control" />
                <span asp-validation-for="PasswordText" class="text-danger"></span>&nbsp;
            </div>
        </div>
        <div class="col-6">
            <div class="form-group">
                <label asp-for="LastName" class="control-label">Nazwisko</label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>&nbsp;
            </div>
            <div class="form-group">
                <label asp-for="BirthDate" class="control-label">Data urodzenia</label>
                <input asp-for="BirthDate" class="form-control" type="date" value="" />
                <span asp-validation-for="BirthDate" class="text-danger"></span>&nbsp;
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label">Email</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>&nbsp;
            </div>
        </div>
    </div>

    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
