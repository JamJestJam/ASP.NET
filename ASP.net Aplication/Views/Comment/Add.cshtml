@model ASP.net_Aplication.Models.Comment.AddModelComment

@{
    ViewData["Title"] = "Add";
}

<br />
<h4>Dodaj komentarz</h4>
<hr />
<div class="row">
    <form asp-controller="Comment" asp-action="Add" style="width: 100%">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input asp-for="ImageID" class="form-control" />
        <div class="form-group">
            <label asp-for="CommentText" class="control-label"></label>
            <textarea asp-for="CommentText" class="form-control"></textarea>
            <span asp-validation-for="CommentText" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Dodaj" class="btn btn-primary" />
        </div>
    </form>
</div>