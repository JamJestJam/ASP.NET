@model ASP.net_Aplication.Models.Image.UpdateModelImage

@{
    ViewData["Title"] = "Update";
}

<h1>Zmień tytuł</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="UpdateAdmin">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="ImageID" class="form-control" />
            <input asp-for="ReturnUrl" class="form-control" />
            <div class="form-group">
                <label asp-for="ImageTitle" class="control-label"></label>
                <input asp-for="ImageTitle" class="form-control" />
                <span asp-validation-for="ImageTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a href="@Model.ReturnUrl">Wróć</a>
</div>

